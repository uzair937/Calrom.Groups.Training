@using Calrom.Training.AuctionHouse.Web.Models
@model ListingsViewModel

@{
    ViewBag.Title = "Listings";
}
<h2>@ViewBag.Title.</h2>

@if (@Model.IsAuthenticated)
{
    <h3>@Html.ActionLink("New Listing", "NewProduct", "Product")</h3>
}

<h3>Current listings.</h3>

<p>Listings will be displayed here.</p>
@foreach (var product in Model.ProductList)
{
    <table>
        <tr>
            Item Name: @product.ItemName
            <br />
            Starting Bid: £@product.ItemPrice
            <br />
            Current Bid: £@product.CurrentBid
            <br />
            <img src="@product.ImageSrc" class="images" />
            <br />
            @Html.ActionLink("View this listing", "IndividualProduct", "Product", new { itemId = product.ItemID }, null)
        </tr>
    </table>
}