@using CustomRegionEditor.ViewModels
@model SubRegionViewModel

<div class="subregion-container flex-column">
    @if (Model.IsViewing)
    {
        <table class="table-header">
            <tr>
                <th>Region</th>
                <th>Country</th>
                <th>State</th>
                <th>City</th>
                <th>Airport</th>
            </tr>
            @foreach (var entry in Model.CustomRegionGroupViewModel.CustomRegions)
            {
                <tr class="single-region-entry">
                    <td>@entry.Region.Name</td>
                    <td>@entry.Country.Name</td>
                    <td>@entry.State.Name</td>
                    <td>@entry.City.Name</td>
                    <td>@entry.Airport.Name</td>
                </tr>
            }
        </table>
    }
</div>
